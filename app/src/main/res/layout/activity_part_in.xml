<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/base_title"/>
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_margin_size"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="零件号"/>
        <EditText
            android:id="@+id/editText_parts_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:layout_weight="7"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="零件名称  "/>
        <EditText
            android:id="@+id/editText_parts_name"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="包装规格"/>
        <Spinner
            android:id="@+id/spinner_ps"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_background"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="入仓数量" />
        <EditText
            android:id="@+id/editText_out_number"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="供应商"/>
        <EditText
            android:id="@+id/editText_vendor"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="经办人"/>
        <EditText
            android:id="@+id/editText_operator"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_margin_size"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_ok"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divider_margin_size"
            android:layout_marginLeft="@dimen/divider_margin_size"
            android:background="@drawable/button_normal"
            style="@style/ButtonStyle"
            android:text="@string/ok"/>
        <Button
            android:id="@+id/button_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/divider_margin_size"
            android:layout_marginLeft="@dimen/divider_margin_size"
            android:background="@drawable/btn_cancel_normal"
            style="@style/ButtonStyle"
            android:text="@string/cancel"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>