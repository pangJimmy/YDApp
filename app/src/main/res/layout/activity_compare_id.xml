<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/divider_margin_size"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零件号1  "/>
        <EditText
            android:id="@+id/editText_parts_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:layout_weight="1"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/divider_margin_size"
        android:layout_marginLeft="@dimen/divider_margin_size"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="零件号2  "/>
        <EditText
            android:id="@+id/editText_parts_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/edit_text_margin_size"
            android:padding="@dimen/edit_text_padding_size"
            android:layout_weight="1"
            android:background="@drawable/corners_background"
            android:minHeight="@dimen/edit_text_min_hight_size"/>
    </LinearLayout>
    <include layout="@layout/divider"/>


</LinearLayout>
